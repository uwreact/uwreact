{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:react/recommended", "prettier", "prettier/react"],
  "plugins": ["react", "jest", "prettier"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "prettier/prettier": "warn"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "root": ["./src"]
      }
    }
  }
}
