  "license": "MIT",
  "private": true,
  "scripts": {
    "logs": "firebase functions:log",
    "test": "jest",
    "build": "yarn build:development",
    "build:development": "NODE_ENV=development webpack --mode production",
    "build:staging": "NODE_ENV=staging webpack --mode production",
    "build:production": "NODE_ENV=production webpack --mode production",
    "analyze": "yarn build --anaylze",
    "deploy": "yarn deploy:development",
    "deploy:development": "yarn build:development && firebase use shire-development && firebase deploy --only functions",
    "deploy:staging": "yarn build:staging && firebase use shire-staging && firebase deploy --only functions",
    "deploy:production": "yarn build:production && firebase use shire-production && firebase deploy --only functions"
  },
  "devDependencies": {
